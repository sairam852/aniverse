<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aniverse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nebula_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/stardust_surface</item>
        <item name="colorOnPrimaryContainer">@color/text_high_emphasis</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/horizon_blue</item>
        <item name="colorOnSecondary">@color/cosmic_void</item>
        <item name="colorSecondaryContainer">@color/stardust_surface</item>
        <item name="colorOnSecondaryContainer">@color/text_medium_emphasis</item>
        
        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/cosmic_void</item>
        <item name="colorSurface">@color/stardust_surface</item>
        <item name="colorOnSurface">@color/text_high_emphasis</item>
        <item name="colorOnBackground">@color/text_high_emphasis</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/cosmic_void</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Typography Defaults -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Aniverse.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Aniverse.HeadlineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Aniverse.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Aniverse.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Aniverse.BodySmall</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Aniverse.TitleMedium</item>
    </style>
    
    <!-- Custom Typography Styles -->
    <style name="TextAppearance.Aniverse.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Aniverse.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Aniverse.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_high_emphasis</item>
    </style>

    <style name="TextAppearance.Aniverse.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_medium_emphasis</item>
    </style>
    
    <style name="TextAppearance.Aniverse.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_medium_emphasis</item>
    </style>
    
    <style name="TextAppearance.Aniverse.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/cosmic_void</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_branding</item>
        <item name="postSplashScreenTheme">@style/Theme.Aniverse</item>
    </style>
</resources>
